
@model List<StudentMarkManagement.Core.Models.StudentDetails>
<div class="container">

    <table class="table table-hover">
        <tr>


            <th>Name</th>
            <th>Email</th>
            <th>Department Name</th>
            <th>Gender</th>
            <th>Action</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td> @item.Name </td>
                <td>@item.Email</td>
                <td> @item.Department </td>
                <td> @item.Gender</td>
                <td>
                    @*<i class="glyphicon glyphicon-trash">
                            @Html.ActionLink("Delete", "Delete", new { id = item.StudentId }, new { onclick = "return confirm('Are sure wants to delete?');" })
                        </i>*@
                    <button class="btn btn-danger" type="button" id="@item.StudentId" onclick="Delete(this.id)">delete</button>

                </td>

            </tr>
        }
    </table>
</div>
<script>

    function Delete(id) {
        if (confirm("Are sure wants to delete?")) {
            window.location.href = "@Url.Action("Delete", "Student")?Id=" + id;
        }
    }
</script>
 