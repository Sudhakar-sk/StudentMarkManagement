@model StudentMarkManagement.Core.Models.StudentDetails


@{
    ViewBag.title = "AddStudent";
}

<script src="~/js/site.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
@using (Html.BeginForm("AddStudents", "Student", FormMethod.Post, new { @id = "FormDetails" }))
{

    <div class="form-group">
        <label>Name</label>
        <div> @Html.EditorFor(m => m.Name, new { @class = "form-control" })</div>
    </div>

    <div class="form-group">
        <label>Email</label>
        <div> @Html.EditorFor(m => m.Email, new { @class = "form-control" })</div>
    </div>

    <div class="form-group">
        <label>Department</label>
        <div>
            @*@Html.EditorFor(m => m.Department, new { @class = "form-control" })*@
            @*@Html.DropDownList("Department", new SelectList(ViewBag.Message, "DepartmentId", "DepartmentName"))*@
            @*@Html.DropDownList("Departments", new SelectList(Model.Departments, "DepartmentId", "DepartmentName"), "Select Department")*@
            @Html.DropDownList("Department", new SelectList(Model.Departments, "DepartmentId", "DepartmentName"), "Select Department", new { id = "Department", @style = "width:210px" })
            @*<select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.message,"Cid","Cname"))"></select>*@
        </div>
    </div>
    <div class="form-group">
        <label>Gender</label>

        @Html.RadioButtonFor(Modal => Modal.Gender, "Male")<span>Male</span>
        @Html.RadioButtonFor(Modal => Modal.Gender, "Female")<span>Female</span>
    </div>

    <button type="submit" class="btn btn-primary"  onclick="SubmitDetails()">Save</button>

}

<script>
    $(function () {
        debugger;
        $("#FormDetails").validate({
            rules:
            {
                Name: {
                    required: true,
                    maxlength: 50
                },
                Email: {
                    required: true,
                    maxlength: 50,

                },
                Department: {
                    required: true,
                },
                Gender: {
                    required: true,
                }
            },

            messages: {
                Name: {
                    required: "Name is required",
                    maxlength: "Name should not over 50 charcter"
                },
                Email: {
                    required: "Email is required",
                    maxlength: "Email should not over 50 charcter",

                },
                Department: {
                    required: "Department is required",
                },
                Gender: {
                    required: "Gender is required",
                }
            }

        });
    })


    function SubmitDetails() {
        debugger;
        if ($("#FormDetails").valid()) {
            $("#FormDetails").submit();
        }
    }
</script>